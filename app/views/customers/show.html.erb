<% if signed_in? %>
<% if admin? or @current_customer.userName == @customer.userName %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @customer.userName %>
</p>

<p>
  <strong>Phonenum:</strong>
  <%= @customer.phoneNum %>
</p>

<p>
  <strong>Dob:</strong>
  <%= @customer.dob %>
</p>

<p>
  <strong>Age:</strong>
  <%= age(@customer.dob) %>
</p>

<p>
  <strong>Address:</strong>
  <%= @customer.address %>
</p>

<p>
  <strong>Email:</strong>
  <%= @customer.email %>
</p>

<%= link_to 'Edit', edit_customer_path(@customer) %> |
<%= link_to 'Back', customers_path %>

<% else %>
<h1> You can only view or edit the information of your own account </h1>
<%= link_to 'Home', root_path %>
<% end %>
<% else %>
<h1> You must log in to view or edit your own account </h1>
<%= link_to 'Home', root_path %>
<% end %>